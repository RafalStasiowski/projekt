<div class="panel header-panel flow-text z-depth-3">
  <div id="title">Wszystkie kategorie</div>
</div>
<div class="full-height scroll-bar">
  <div class="header">
    <div class="row">
  </div>

  </div><!--end of header-->
  <div class="body">
    <table class="striped">
    <thead>
      <tr>
        <th data-field="id">Nazwa</th>
        <th data-field="name">Opis</th>
        <th data-field="name">Usunąć ?</th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each do |category| %>
        <a href = "/>">
        <tr>
          <td><%=link_to "#{category.title}", edit_category_path(category.id) %></td>
          <td><%= category.description %></td>
          <td><%= link_to "Usuń", category_path(category.id), method: :delete %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div><!--end of header-->

  <div class="footer">
    <div class="row">
      <div class="fixed-action-btn" style="bottom: 45px; right: 24px;">
        <a class="btn-floating btn-large red" href="/categories/new">
          <i class="large material-icons">add</i>
        </a>
        <ul>
          <li><a href="/categories/new" class="btn-floating red"><i class="material-icons">web</i></a></li>
        </ul>
      </div>
    </div>
  </div>

</div>