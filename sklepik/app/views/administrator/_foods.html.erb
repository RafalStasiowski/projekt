<div class="panel header-panel flow-text z-depth-3">
      <div id="title">Wszystkie potrawy </div>
    </div>
<div class="full-height scroll-bar">
	<div class="header">
			<div class="row">
				<div class="input-field col s6">
			    <select class="select_box select_field" style="display:block">
			      <option value="0" selected>Sortowanie według statusu</option>
			      <option value="/foods" >Dostępny</option>
			      <option value="/">Niedostępny</option>
			    </select>
			  </div>

				<div class="input-field col s6">
          <i class="material-icons prefix">search</i>
          <input id="icon_prefix" type="text" class="validate">
          <label for="icon_prefix">Wyszukiwanie po nazwie produktu</label>
				</div>
			</div>

	</div><!--end of header-->
	<div class="body">
		<table class="striped">
		<thead>
			<tr>
					<th data-field="id">Nazwa</th>
					<th data-field="name">Opis</th>
					<th data-field="price">Cena produktu</th>
					<th data-field="price">Kategoria</th>

					<th data-field="price">Aktualizacja</th>
					<th data-field="price"></th>
			</tr>
		</thead>

		<tbody>
			<% @foods.each do |food| %>
				<a href = "/>">
				<tr>
					<td><%=link_to "#{food.name}", edit_food_path(food.id) %></td>
					<td><%= food.description %></td>
					<td><%= food.price %></td>
					<td><%= !food.category.nil? ? food.category.title : "none yet" %></td>

					<td><%= food.updated_at.strftime("%d %m %Y") %></td>
					<td>
						<%= button_to food_path(food.id), :class => "clear-button", method: :delete do %>
							<i class="material-icons">clear</i>
						<% end %>
					</td>
				</tr>

			<% end %>
		</tbody>
	</table>
	</div><!--end of header-->
	<div class="footer">
		<div class="row">
		  <div class="fixed-action-btn" style="bottom: 45px; right: 24px;">
		    <a class="btn-floating btn-large red" href="/foods/new">
		      <i class="large material-icons">add</i>
		    </a>
		    <ul>
		      <li><a href="/foods/new" class="btn-floating yellow darken-1"><i class="material-icons">settings_input_svideo</i></a></li>
		    </ul>
		  </div>
		</div>
	</div><!--end of header-->

</div>